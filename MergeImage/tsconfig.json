
{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "ES6",
    "target": "ES5",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": [ "ES2015", "DOM" ]
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}